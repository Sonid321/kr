    <TabControl x:Name="tabc"
                HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
        Background="#FF4C3535"
        materialDesign:ColorZoneAssist.Mode="PrimaryDark"
        Style="{StaticResource MaterialDesignNavigationRailTabControl}"
        TabStripPlacement="Top"
             >
        <TabItem>
            <TabItem.Header>

                <StackPanel>
                    <materialDesign:PackIcon
                        Width="20"
                        Height="20"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Kind="BookCheck"
                        ToolTip="Журнал учета"
                        />            
                </StackPanel>
            </TabItem.Header>
            <Grid>
                <Border BorderBrush="#FF4C1515" BorderThickness="20">

                </Border>
                <DataGrid 
            x:Name="Grida"
            IsReadOnly="True"
            ItemsSource="{Binding Jurnal_Ucheta}" 
            AutoGenerateColumns="False"
            Margin="20,13,20,50"
            BorderBrush="#FF0A0806" Background="#FFBFB5B5">
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding Sotrudniki.ФИО}" Width="110" Header="Сотрудник" />
                        <DataGridTextColumn Binding="{Binding Client.ФИО}" Width="110" Header="Клиент" />
                        <DataGridTextColumn Binding="{Binding VidUslug.Наименование_услуги}" Width="185" Header="Услуга" />
                        <DataGridTextColumn Binding="{Binding Дата_подписания, ConverterCulture=ru-Ru}" Width="125" Header="Дата" />
                        <DataGridTextColumn Binding="{Binding Номер_договора}" Width="125" Header="Номер договора" />
                        <DataGridTextColumn Binding="{Binding Комер_акта_накладной_}" Width="125" Header="Накладная" />
                        <DataGridTextColumn Binding="{Binding Стоимость,StringFormat=C0, ConverterCulture=ru-Ru}" Width="125" Header="Стоимость" />
                        <DataGridTextColumn Binding="{Binding Код_плательщика}" Width="75" Header="Код плательщика" />
                        <DataGridTemplateColumn Width="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button
                                            x:Name="UpdateRecordButton"
                                            Width="30"
                                            Height="30"
                                            Click="Edit"
                                            Style="{StaticResource MaterialDesignToolButton}"
                                            ToolTip="Редактировать запись">
                                        <materialDesign:PackIcon Kind="Edit" />
                                    </Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Width="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button
                                            x:Name="DeleteRecordButton"
                                            Width="30"
                                            Height="30"
                                            Click="delClick"
                                            Style="{StaticResource MaterialDesignToolButton}"
                                            ToolTip="Удалить запись">
                                        <materialDesign:PackIcon Kind="Delete" />
                                    </Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
                <ToolBarTray IsLocked="True" Margin="20,0,20,15" Background="#FF463E3E" Height="35" VerticalAlignment="Bottom">
                    <ToolBar ClipToBounds="False" Width="1215" Style="{StaticResource MaterialDesignToolBar}" Background="#FF7D7676">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon
                                    VerticalAlignment="Center"
                                    Kind="Search"
                                    Opacity=".56" />

                            <TextBox
                                    x:Name="SearchTextBox"
                                    MinWidth="300"
                                    Margin="8,0,0,0"
                                    VerticalAlignment="Center"
                                    materialDesign:HintAssist.Hint="Поиск"
                                    materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                    BorderThickness="0"
                                    FontSize="12" TextChanged="SearchTextBox_TextChanged" />
                            <Button
                                    x:Name="DeleteRecordButton"
                                    Padding="0"
                                    Click="DeleteRecordButton_Click"
                                    Style="{StaticResource MaterialDesignFlatDarkButton}">
                                <materialDesign:PackIcon Kind="ClearBox" />
                            </Button>
                        </StackPanel>
                        <DatePicker
                                x:Name="After"
                                Margin="8,0,8,0"
                                materialDesign:TextFieldAssist.PrefixText="C: "
                                SelectedDateChanged="DatePicker_SelectedDateChanged"
                                Style="{StaticResource MaterialDesignDatePicker}" />
                        <DatePicker
                                x:Name="Before"
                                Margin="8,0,8,0"
                                materialDesign:TextFieldAssist.PrefixText="По: "
                                SelectedDateChanged="DatePicker_SelectedDateChanged"
                                Style="{StaticResource MaterialDesignDatePicker}" />
                        <Label Content="       Добавить запись        " Style="{StaticResource MaterialDesignLabel}" Height="24"/>
                        <Button
                            x:Name="CreateRecordButton"                    
                            Click="Addcl"
                            Style="{StaticResource MaterialDesignFlatSecondaryButton}" HorizontalAlignment="Left">
                            <materialDesign:PackIcon Kind="AddBox" Foreground="Black" />
                        </Button>
                    </ToolBar>
                </ToolBarTray>
            </Grid>

        </TabItem>

